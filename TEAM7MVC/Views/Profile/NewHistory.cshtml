@model Team7MVC.Models.ProfileViewModel
@{
    ViewData["Title"] = "My News History";
    var createdArticles = ViewBag.CreatedArticles as List<Team7MVC.Models.NewArticleViewModel>;
    var updatedArticles = ViewBag.UpdatedArticles as List<Team7MVC.Models.NewArticleViewModel>;
}

<h2>My News History</h2>

@if ((createdArticles == null || !createdArticles.Any())
   && (updatedArticles == null || !updatedArticles.Any()))
{
    <p>No news articles found.</p>
}
else
{
    <h3>Articles Created by Me</h3>
    @if (createdArticles == null || !createdArticles.Any())
    {
        <p>No articles created.</p>
    }
    else
    {
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Headline</th>
                    <th>Created Date</th>
                    <th>News Source</th>
                    <th>Category</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var article in createdArticles)
                {
                    <tr>
                        <td>@article.NewsTitle</td>
                        <td>@article.Headline</td>
                        <td>@article.CreatedDate.ToString("yyyy-MM-dd")</td>
                        <td>@article.NewsSource</td>
                        <td>@article.Category</td>
                    </tr>
                }
            </tbody>
        </table>
    }

    <h3>Articles Updated by Me</h3>
    @if (updatedArticles == null || !updatedArticles.Any())
    {
        <p>No articles updated.</p>
    }
    else
    {
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Headline</th>
                    <th>Modified Date</th>
                    <th>News Source</th>
                    <th>Category</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var article in updatedArticles)
                {
                    <tr>
                        <td>@article.NewsTitle</td>
                        <td>@article.Headline</td>
                        <td>@article.CreatedDate.ToString("yyyy-MM-dd")</td>
                        <td>@article.NewsSource</td>
                        <td>@article.Category</td>
                    </tr>
                }
            </tbody>
        </table>
    }
}

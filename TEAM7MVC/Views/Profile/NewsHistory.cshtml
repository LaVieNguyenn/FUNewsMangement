@model Team7MVC.Models.ProfileViewModel
@{
    ViewData["Title"] = "My News History";
}

<h2>My News History</h2>

<!-- Nút quay lại trang Profile -->
<a asp-action="Index" asp-controller="Profile" class="btn btn-secondary mb-3">
    ← Back to Profile
</a>

@if (!Model.CreatedArticles.Any() && !Model.UpdatedArticles.Any())
{
    <p>No news articles found.</p>
}
else
{
    <h3>Articles Created by Me</h3>
    @if (!Model.CreatedArticles.Any())
    {
        <p>No articles created.</p>
    }
    else
    {
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Headline</th>
                    <th>Created Date</th>
                    <th>News Source</th>
                    <th>Category</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var article in Model.CreatedArticles)
                {
                    <tr>
                        <td>@article.NewsTitle</td>
                        <td>@article.Headline</td>
                        <td>@article.CreatedDate.ToString("yyyy-MM-dd")</td>
                        <td>@article.NewsSource</td>
                        <td>@article.Category</td>
                    </tr>
                }
            </tbody>
        </table>
    }

    <h3>Articles Updated by Me</h3>
    @if (!Model.UpdatedArticles.Any())
    {
        <p>No articles updated.</p>
    }
    else
    {
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Headline</th>
                    <th>Modified Date</th>
                    <th>News Source</th>
                    <th>Category</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var article in Model.UpdatedArticles)
                {
                    <tr>
                        <td>@article.NewsTitle</td>
                        <td>@article.Headline</td>
                        <td>@article.CreatedDate.ToString("yyyy-MM-dd")</td>
                        <td>@article.NewsSource</td>
                        <td>@article.Category</td>
                    </tr>
                }
            </tbody>
        </table>
    }
}
<a asp-action="Index" asp-controller="Profile" class="btn btn-secondary mt-3">
     Back to Profile
</a>

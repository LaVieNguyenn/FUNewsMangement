@model Team7MVC.Models.ProfileViewModel
@{
    ViewData["Title"] = "My Profile";
}

<h2>My Profile</h2>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">@Model.AccountName</h4>
        <p class="card-text">
            <strong>Email:</strong> @Model.AccountEmail <br />
            <strong>Role:</strong> @Model.AccountRole <br />
            <strong>Account ID:</strong> @Model.AccountId
        </p>

        <a asp-action="Edit" class="btn btn-primary">Edit Profile</a>
        <a asp-action="NewsHistory" class="btn btn-info">View News History</a>
    </div>
</div>

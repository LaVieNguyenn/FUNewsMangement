@using Team7MVC.BLL.Services.NewsArticleService
@inject INewArticleService _services;
@{
    var newsAcademics = await _services.GetAllNewestNewsByCategoryNameAsync("Academics", 2);
    var newsTechnologys = await _services.GetAllNewestNewsByCategoryNameAsync("Technology", 4);
    var newsSport = await _services.GetAllNewestNewsByCategoryNameAsync("Sports", 10);
    var newsAI = await _services.GetAllNewestNewsByCategoryNameAsync("AI", 10);
    var newsCyber = await _services.GetAllNewestNewsByCategoryNameAsync("Cybersecurity", 10);
}


<div class="row">
    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
        <div class="section-title">
            <h3 class="color-aqua"><a href="blog-category-01.html" title="">Academics</a></h3>
        </div><!-- end title -->
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                @foreach (var i in newsAcademics)
                {
                    <div class="blog-box">
                        <div class="post-media">
                            <a href="single.html" title="">
                                <img src="~/upload/blog_05.jpg" alt="" class="img-fluid">
                                <div class="hovereffect">
                                    <span></span>
                                </div><!-- end hover -->
                            </a>
                        </div><!-- end media -->
                        <div class="blog-meta big-meta">
                            <h4><a href="single.html" title="">@i.NewsTitle</a></h4>
                            <p>@i.NewsContent</p>
                            <small><a href="blog-category-01.html" title="">@i.CategoryName</a></small>
                            <small><a href="single.html" title="">@i.CreatedDate</a></small>
                            <small><a href="blog-author.html" title="">by @i.AccountName</a></small>
                        </div><!-- end meta -->
                    </div>
                    <!-- end blog-box -->
                    <hr class="invis">
                }

            </div>
        </div><!-- end row -->
    </div><!-- end col -->

    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
        <div class="section-title">
            <h3 class="color-pink"><a href="blog-category-01.html" title="">Technology</a></h3>
        </div><!-- end title -->
        <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                @for(int i = 0; i < 2; i++)
                {
                    <div class="blog-box">
                        <div class="post-media">
                            <a href="single.html" title="">
                                <img src="~/upload/blog_01.jpg" alt="" class="img-fluid">
                                <div class="hovereffect">
                                    <span></span>
                                </div><!-- end hover -->
                            </a>
                        </div><!-- end media -->
                        <div class="blog-meta">
                            <h4><a href="single.html" title="">@newsTechnologys.ElementAt(i).NewsTitle</a></h4>
                            <small><a href="blog-category-01.html" title="">@newsTechnologys.ElementAt(i).CategoryName</a></small>
                            <small><a href="blog-category-01.html" title="">@newsTechnologys.ElementAt(i).CreatedDate</a></small>
                        </div><!-- end meta -->
                    </div><!-- end blog-box -->

                    <hr class="invis">
                }
            </div><!-- end col -->

            <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                @for (int i = 2; i < 4; i++)
                {
                    <div class="blog-box">
                        <div class="post-media">
                            <a href="single.html" title="">
                                <img src="~/upload/blog_03.jpg" alt="" class="img-fluid">
                                <div class="hovereffect">
                                    <span></span>
                                </div><!-- end hover -->
                            </a>
                        </div><!-- end media -->
                        <div class="blog-meta">
                            <h4><a href="single.html" title="">@newsTechnologys.ElementAt(i).NewsTitle</a></h4>
                            <small><a href="blog-category-01.html" title="">@newsTechnologys.ElementAt(i).CategoryName</a>, <a href="blog-category-01.html" title="">@newsTechnologys.ElementAt(i).AccountName</a></small>
                            <small><a href="blog-category-01.html" title="">@newsTechnologys.ElementAt(i).CreatedDate</a></small>
                        </div><!-- end meta -->
                    </div><!-- end blog-box -->

                    <hr class="invis">
                }

            </div><!-- end col -->
        </div><!-- end row -->
    </div><!-- end col -->
</div><!-- end row -->
<hr class="invis1">
<div class="row">
    <div class="col-lg-9">
        <div class="blog-list clearfix">
            <div class="section-title">
                <h3 class="color-green"><a href="blog-category-01.html" title="">AI</a></h3>
            </div><!-- end title -->
            @foreach (var i in newsAI)
            {
                <div class="blog-box row">
                    <div class="col-md-4">
                        <div class="post-media">
                            <a href="single.html" title="">
                                <img src="~/upload/blog_square_01.jpg" alt="" class="img-fluid">
                                <div class="hovereffect"></div>
                            </a>
                        </div><!-- end media -->
                    </div><!-- end col -->

                    <div class="blog-meta big-meta col-md-8">
                        <h4><a href="single.html" title="">@i.NewsTitle</a></h4>
                        <p>@i.NewsContent</p>
                        <small><a href="blog-category-01.html" title="">@i.CategoryName</a></small>
                        <small><a href="single.html" title="">@i.CreatedDate</a></small>
                        <small><a href="blog-author.html" title="">by @i.AccountName</a></small>
                    </div><!-- end meta -->
                </div><!-- end blog-box -->
            }
            <hr class="invis">

            <div class="section-title">
                <h3 class="color-green"><a href="blog-category-01.html" title="">Cybersecurity</a></h3>
            </div><!-- end title -->
            @foreach (var i in newsCyber)
            {
                <div class="blog-box row">
                    <div class="col-md-4">
                        <div class="post-media">
                            <a href="single.html" title="">
                                <img src="~/upload/blog_square_01.jpg" alt="" class="img-fluid">
                                <div class="hovereffect"></div>
                            </a>
                        </div><!-- end media -->
                    </div><!-- end col -->

                    <div class="blog-meta big-meta col-md-8">
                        <h4><a href="single.html" title="">@i.NewsTitle</a></h4>
                        <p>@i.NewsContent</p>
                        <small><a href="blog-category-01.html" title="">@i.CategoryName</a></small>
                        <small><a href="single.html" title="">@i.CreatedDate</a></small>
                        <small><a href="blog-author.html" title="">by @i.AccountName</a></small>
                    </div><!-- end meta -->
                </div>

                <!-- end blog-box -->
            }
            <hr class="invis">
        </div><!-- end blog-list -->
    </div><!-- end col -->
    <div class="col-lg-3">
            <div class="section-title">
                <h3 class="color-yellow"><a href="blog-category-01.html" title="">Sport</a></h3>
            </div><!-- end title -->
        @foreach (var i in newsSport)
        {
            <div class="blog-box">
                <div class="post-media">
                <a href="single.html" title="">
                    <img src="~/upload/blog_10.jpg" alt="" class="img-fluid">
                    <div class="hovereffect">
                        <span class="videohover"></span>
                    </div><!-- end hover -->
                </a>
            </div><!-- end media -->
            <div class="blog-meta">
                <h4><a href="single.html" title="">@i.NewsTitle</a></h4>
                <small><a href="blog-category-01.html" title="">@i.CategoryName</a></small>
                <small><a href="blog-category-01.html" title="">@i.CreatedDate</a></small>
            </div><!-- end meta -->
        </div><!-- end blog-box -->
            <hr class="invis">
        }
        <hr class="invis">

    </div><!-- end col -->
</div><!-- end row -->